extends layout

block head-extras
  script(src='/js/create.js')
  script(src='/js/lib/kana-input.min.js')

block content
  h1 Create Cards
  form#input-format-form
    span kana #[input(id='kana-enabled', name='input-format', type='radio', checked)]
    span english #[input(id='english-enabled', name='input-format', type='radio')]

  .results
    if error
      .alert.alert-danger(role="alert")= error
    else if numNewCards
      .alert.alert-success Created #{numNewCards} new cards!
  form.form-inline(method='POST' action='' autocomplete='off')
    .row
      .form-group
        input.form-control(type='text', placeholder='English side of card', name='front', value='')
      .form-group
        input.form-control.japanese-input(type='text', placeholder='Japanese side of card', name='back', value='')
      button.btn.btn-success
        span.glyphicon.glyphicon-plus

    button.btn.btn-primary(type='submit') Submit
