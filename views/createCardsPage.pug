extends layout

block head-extras
  script(src='/js/create.js')

block content
  h1= title
  h4 New Card
  form(method='POST' action='')
    .form-group
      input.form-control(type='text', placeholder='Front of card', name='front', value='')
    .form-group
      input.form-control(type='text', placeholder='Back of card', name='back', value='')
    button.btn.btn-primary(type='submit') Submit

  .results
    if errors
      for error in errors
        .alert.alert-danger(role="alert")= error.msg
    else if newCard
      .panel.panel-default
        .panel-heading Created new card!
        table.table
          thead
            tr
              th #
              th Front
              th Back
          tbody
            tr
              th(scope="row") #{newCard.id}
              td #{newCard.front}
              td #{newCard.back}