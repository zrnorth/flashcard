extends layout

block head-extras
    script(src='/js/cards.js')

block content
    h1= title
    p There are #{cards.length} reviews today.
    each card in cards
      .review-container
        .card-container()
          .front card ##{card.id}: #{card.front} / #{card.back}
          .back back
        form(method='POST' action='' id=card.id).review
          h4 Score:
          each val in [0, 1, 2, 3, 4, 5]
            button.score-button(value=val) #{val}

    else
      h4 All done! âœ”