extends layout

block head-extras
    script(src='/js/cards.js')
    script.
      CARDS_LEFT =!{cards.length};


block content
    h1= title
    #cards-left-banner
      if cards.length > 0
        | There are #{cards.length} reviews today.

    #reminder-text
      p 5 - perfect response
      p 4 - correct response after a hesitation
      p 3 - correct response recalled with serious difficulty
      p 2 - incorrect response; where the correct one seemed easy to recall
      p 1 - incorrect response; the correct one remembered
      p 0 - complete blackout

    .reviews
      each card in cards
        .review-container
          .card-container
            .front card ##{card.id}: #{card.front} / #{card.back}
            .back back
          form(method='POST' action='' id=card.id).review
            h4 Score:
            each val in [0, 1, 2, 3, 4, 5]
              button.score-button(value=val) #{val}
            button.reminder-button ?

      else
        h4 No reviews today! âœ”